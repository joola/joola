block variables
  title = "joola.io - manage"
include ../layout_head
body
  #wrapper
    include ../layout_navbar
    #page-wrapper
      .row
        .col-lg-12
          h1.page-caption
            | Message Dispatch&nbsp;
            small The grid's heart-beat
          ol.breadcrumb
            li
              a(href="/manage/dashboard/index")
                i.fa.fa-dashboard
                | &nbsp;Dashboard
            li.active
              i.fa.fa-tasks
              | &nbsp;Message Dispatch
          //.alert.alert-info
            button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
            | The System Performance view displays information about all participating nodes.
            | For each node, you'll see a detailed breakdown of performance KPIs. To learn more about System Performance, check out our&nbsp;
            a(href="#wiki") wiki
            | .
      .row
        .col-lg-3.widget.widget-sytstemload
        .col-lg-3.widget.widget-waittime
        .col-lg-3.widget.widget-eps
        .col-lg-3.widget.widget-roundtrip
      .row
        .col-lg-3.widget.widget-nodes
        .col-lg-3.widget.widget-querytime
        .col-lg-3.widget.widget-fulfilled
        .col-lg-3.widget.widget-elb
      .row
        .col-lg-3.widget.widget-tokens
        .col-lg-3.widget.widget-cachehits
        .col-lg-3.widget.widget-fulfilltime
        .col-lg-3.widget.widget-exceptions

      .row(style="margin-bottom:10px")
        .col-lg-3
          div.right-inner-addon
            i.fa.fa-search
            input(type="search",class="form-control",placeholder="Search")

        .col-lg-6.pull-right(style="margin-top:5px")
          ul.list-inline.pull-right
            li: a(href="#", ng-click="eventDateFilter('all')") All
            li: a(href="#", ng-click="eventDateFilter('day')") Pending
            li: a(href="#", ng-click="eventDateFilter('1hour')") Picked
            li: a(href="#", ng-click="eventDateFilter('5min')") Fulfilled
      .row.nodelist
        #content.col-sm-12
          .col-lg-12.template-node.nodeitem.dispatch-message.hidden
            .panel.panel-info
              .panel-heading
                .row
                  .col-xs-3
                    p.announcement-text.pull-left.message-channel -------
                  .col-xs-3
                    p.message-from ---------
                  .col-xs-3
                    p.message-to ---------
                  .col-xs-2
                    p.announcement-text.text-center.message-status(style="margin-right:0;float:none") PENDING
                  .col-xs-1
                    p.announcement-text.pull-right.message-since(style="margin-right:0; text-transform:none") ---
      //.row.nodelist
            .col-lg-3.template-node.nodeitem.hidden
              .panel.panel-info
                .panel-heading
                  .row
                    .col-xs-8
                      p.announcement-text.pull-left.message-channel -------
                    .col-xs-4
                      p.announcement-text.pull-right.message-since(style="margin-right:0; text-transform:none") ---
                  .row.clearfix
                    .col-xs-12(style="margin-top:10px;")
                      p.message-fromto 1pW0Jb1YM...
                  .row.clearfix
                    .col-xs-12
                      p.announcement-text.text-center.message-status(style="margin-right:0;float:none") PENDING

  include ../layout_footer
  script.
    $(window).on('page-ready',function(){
      dispatch_setup();
    });